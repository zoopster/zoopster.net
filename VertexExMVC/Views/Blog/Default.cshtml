@model ExpressMVC.Models.Blog.BlogListModel
@using ExpressMVC.Models.Common
@using ExpressMVC.UI

@Html.ExpressMenu(HeaderTransparency.Transparent)

@Html.ExpressPageHeader(new PageHeaderModel(title: "Default Blog Layout")
{
    Lead = "Our Latest News",
    Src = "/Content/img/new/hero.jpg",
    UIProps = { Type = PageHeaderType.Parallax }
})

@Html.ExpressFooter()

<section class="section">

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-lg-4 order-1 pr-4">
                @Html.ExpressSidebar(new SidebarModel(name: "BlogSidebar"))
            </div>

            <div class="col-md-8 col-lg-8 order-2 pl-4">

                @Html.ExpressBlog(Model)
            </div>
        </div>
    </div>
</section>