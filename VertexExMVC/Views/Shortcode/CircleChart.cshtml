@using ExpressMVC.Models.Shortcodes
@using ExpressMVC.UI

@Html.ExpressMenu()

@Html.ExpressPageHeader("Circle Charts")

@Html.ExpressFooter()

<section class="section">

    <div class="container">
        <div class="row">

            <div class="col-md-4 col-lg-3 order-1">
                @Html.ExpressSidebar(name: "ShortcodeMenu")
            </div>

            <div class="col-md-8 col-lg-9 order-2">
                <div class="row">
                    <div class="col">
                        @Html.ExpressHeading(ExpressMVC.UI.HTag.h4, new TextElement("Default Circle Charts"), HeadingStyle.LineAfterText)
                        @Html.ExpressSpace(Size.Large)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">

                        @Html.ExpressCircleChart(new CircleChartModel() { Percent = 75, Text = "Development", DetailText = "Lorem ipsum dolor sit amet" })

                    </div>
                    <div class="col-md-4">

                        @Html.ExpressCircleChart(new CircleChartModel() { Percent = 45, Text = "Brand", DetailText = "Lorem ipsum dolor sit amet" })

                    </div>
                    <div class="col-md-4">

                        @Html.ExpressCircleChart(new CircleChartModel() { Percent = 35, Text = "Strategy", DetailText = "Lorem ipsum dolor sit amet" })

                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        @Html.ExpressSpace(Size.Large)
                        @Html.ExpressSpace(Size.Large)
                        @Html.ExpressHeading(ExpressMVC.UI.HTag.h4, new TextElement("Play With UIProps"), HeadingStyle.LineAfterText)
                        @Html.ExpressSpace(Size.Large)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">

                        @Html.ExpressCircleChart(new CircleChartModel() { Percent = 75, Text = "BarColor", UIProps = { BarColor = "red" } })

                    </div>
                    <div class="col-md-4">

                        @Html.ExpressCircleChart(new CircleChartModel() { Percent = 75, Text = "Size", UIProps = { Size = 250 } })

                    </div>
                    <div class="col-md-4">

                        @Html.ExpressCircleChart(new CircleChartModel() { Percent = 75, Text = "LineWidth", UIProps = { LineWidth = 15 } })

                    </div>
                </div>

            </div>


        </div>
    </div>
</section>
