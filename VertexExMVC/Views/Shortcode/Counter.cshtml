@using ExpressMVC.Models.Common
@using ExpressMVC.Models.Shortcodes
@using ExpressMVC.UI

@Html.ExpressMenu()

@Html.ExpressPageHeader(new PageHeaderModel(title: "Blockquote"))

@Html.ExpressFooter()


<section class="section">



<div class="container pt-3">
    <div class="row mb-5 pb-3">

        <div class="col">

            <h4>Default Counters:</h4>
            <hr class="mb-4">
            <div class="row">
                <div class="col-12 col-sm-6 col-lg-3">
                    @Html.ExpressCounter(label: "Happy Clients", to: 25000, apend: "+")
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    @Html.ExpressCounter(label: "Years in Business", to: 15)
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    @Html.ExpressCounter(label: "Answered Tickets", to: 352)
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    @Html.ExpressCounter(label: "Development Hours", to: 178)
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-5 pb-3">

        <div class="col">

            <h4>Counters Sizes:</h4>
            <hr class="mb-4">
            <div class="row">
                <div class="col-12 col-sm-6 col-lg-3">
                    @Html.ExpressCounter(label: "XSmall", to: 352, size: CounterSize.XSmall)
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    @Html.ExpressCounter(label: "Small", to: 352, size: CounterSize.Small)
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    @Html.ExpressCounter(label: "Large", to: 352, size: CounterSize.Large)
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    @Html.ExpressCounter(label: "XLarge", to: 352, size: CounterSize.XLarge)
                </div>
            </div>

        </div>
    </div>
    <div class="row mb-5 pb-3">

        <div class="col">

            <h4>Counters Colors:</h4>
            <hr class="mb-4">
            <div class="row">
                <div class="col-12 col-sm-6 col-lg-3">
                    @Html.ExpressCounter(
                       new CounterModel()
                       {
                           Label = "Happy Clients",
                           Append = "+",
                           To = 25000,
                           UIProps = { Color = ThemeColor.Primary }
                       })
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    @Html.ExpressCounter(
                        new CounterModel()
                        {
                            Label = "Years in Business",
                            To = 15,
                            UIProps = { Color = ThemeColor.Secondary }
                        })
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    @Html.ExpressCounter(
                       new CounterModel()
                       {
                           Label = "Answered Tickets",
                           To = 352,
                           UIProps = { Color = ThemeColor.Tertiary }
                       })
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    @Html.ExpressCounter(
                       new CounterModel()
                       {
                           Label = "Development Hours",
                           To = 178,
                           UIProps = { Color = ThemeColor.Quaternary }
                       })
                </div>
            </div>

        </div>
    </div>
</div>
<div class="container">
    <div class="row">

        <div class="col">
            <h4>Inside Section:</h4>
            <hr class="mb-5">
        </div>
    </div>
</div>


