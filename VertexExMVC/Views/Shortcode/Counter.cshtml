<div class="container pt-5">
    <div class="row mb-5 pb-3">

        <div class="col">

            <h4>With Icons:</h4>
            <hr class="mb-4">
            <div class="row">
                <div class="col-12 col-sm-6 col-lg-3">
                    @Html.ExpressCounter(
                           new CounterModel()
                           {
                               Label = "Happy Clients",
                               Append = "+",
                               To = 25000,
                               Icon = Icons.FontAwesome.User
                           })
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    @Html.ExpressCounter(
                           new CounterModel()
                           {
                               Label = "Years in Business",
                               To = 15,
                               Icon = "lnr lnr-apartment"
                           })
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    @Html.ExpressCounter(
                           new CounterModel()
                           {
                               Label = "Answered Tickets",
                               To = 352,
                               Icon = "sl-support sl"
                           })
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    @Html.ExpressCounter(
                           new CounterModel()
                           {
                               Label = "Development Hours",
                               To = 178,
                               Icon = "sl-clock sl"
                           })
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-5 pb-3">

        <div class="col">

            <h4>Animations:</h4>
            <hr class="mb-4">

            <div class="row">
                <div class="col-12 col-sm-6 col-lg-3">
                    @Html.ExpressCounter(
                       new CounterModel()
                       {
                           Label = "Happy Clients",
                           Append = "+",
                           To = 25000,
                           UIProps = { Animation = new AnimationModel(AnimationType.fadeInLeftShorter, 100) }
                       })
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    @Html.ExpressCounter(
                       new CounterModel()
                       {
                           Label = "Years in Business",
                           To = 15,
                           UIProps = { Animation = new AnimationModel(AnimationType.fadeInLeftShorter, 300) }
                       })
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    @Html.ExpressCounter(
                        new CounterModel()
                        {
                            Label = "Answered Tickets",
                            To = 352,
                            UIProps = { Animation = new AnimationModel(AnimationType.fadeInLeftShorter, 500) }
                        })
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    @Html.ExpressCounter(
                      new CounterModel()
                      {
                          Label = "Development Hours",
                          To = 178,
                          UIProps = { Animation = new AnimationModel(AnimationType.fadeInLeftShorter, 700) }
                      })
                </div>
            </div>

        </div>
    </div>
    <div class="row mb-5 pb-3">

        <div class="col">

            <h4>Special Content:</h4>
            <hr class="mb-4">
            <div class="counters">
                <div class="row">
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="counter text-dark">
                            <strong data-to="70.13" data-plugin-options="{'decimals': 2}">0</strong>
                            <label>Decimals</label>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="counter text-dark">
                            <strong class="d-inline-block">$</strong>
                            <strong class="d-inline-block" data-to="15">0</strong>
                            <label>Currency</label>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="counter text-dark">
                            <strong class="d-inline-block" data-to="78">0</strong>
                            <strong class="d-inline-block">%</strong>
                            <label>Percentual</label>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="counter text-dark">
                            <strong data-to="5000" data-append="+">0</strong>
                            <label>Append Symbol</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-5 pb-3">

        <div class="col-lg-6">

            <h4>Options:</h4>
            <hr class="mb-4">
            <div class="counters">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="counter text-dark">
                            <strong data-to="1000" data-plugin-options="{'speed': 5000}">0</strong>
                            <label>Speed</label>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="counter text-dark">
                            <strong data-to="1000" data-plugin-options="{'refreshInterval': 500}">0</strong>
                            <label>Refresh Interval</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">

            <h4>Inline:</h4>
            <hr class="mb-4">
            <p class="text-4">Express has more than <strong class="text-primary" data-to="30000" data-plugin-counter data-plugin-options="{'speed': 3500}">0</strong> happy customers.</p>
        </div>
    </div>
</div>

</section>