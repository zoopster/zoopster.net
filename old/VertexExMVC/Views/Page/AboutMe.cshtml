        <div class="row text-center">
            <div class="col-md-12">

                @Html.ExpressSpace(Size.Large)

                @{
                    var portfolioModel = PortfolioData.GridData;
                    portfolioModel.PageSize = 6;
                    portfolioModel.UIProps.ColumnCount = 3;
                    portfolioModel.UIProps.ShowFilter = false;
                    portfolioModel.UIProps.ShowPaginations = false;
                }
                @Html.ExpressPortfolio(portfolioModel)

                @Html.ExpressSpace(Size.Large)

                <button id="portfolioLoadMore" type="button" class="btn btn-primary btn-rounded btn-wide-5 btn-icon-effect-2 outline-none text-0">
