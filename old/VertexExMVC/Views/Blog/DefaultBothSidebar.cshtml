@model ExpressMVC.Models.Blog.BlogListModel
@using ExpressMVC.Models.Common

@Html.ExpressMenu()

@Html.ExpressPageHeader(new PageHeaderModel(title: "BLOG") { Lead = "Our Latest News" })

@Html.ExpressFooter()



<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-lg-3 order-1">
                @Html.ExpressSidebar(new SidebarModel(name: "BlogSidebar"))
            </div>

            <div class="col-md-8 col-lg-6 order-2">

                @Html.ExpressBlog(Model)

            </div>
            <div class="col-md-4 col-lg-3 order-3">

                @Html.ExpressSidebar(new SidebarModel(name: "BlogSidebar"))

            </div>
        </div>
    </div>
</section>